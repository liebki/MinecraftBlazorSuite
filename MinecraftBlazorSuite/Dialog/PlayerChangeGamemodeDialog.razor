<MudDialog>
    <DialogContent>
        <MudSelect @bind-Value="SelectedGamemode" T="MinecraftGamemodes">
            <MudSelectItem Value="MinecraftGamemodes.Survival">Survival (World interaction and able to get damage)
            </MudSelectItem>
            <MudSelectItem Value="MinecraftGamemodes.Adventure">Adventure (No world interaction and able to get
                damage)
            </MudSelectItem>
            <MudSelectItem Value="MinecraftGamemodes.Creative">Creative (World interaction with access to all items)
            </MudSelectItem>
            <MudSelectItem Value="MinecraftGamemodes.Spectator">Spectator (Only spectating no world interaction)
            </MudSelectItem>
        </MudSelect>
    </DialogContent>

    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Primary" OnClick="Submit">Change</MudButton>
    </DialogActions>
</MudDialog>