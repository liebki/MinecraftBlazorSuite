<MudDialog>
    <DialogContent>
        <MudTextField @bind-Value="MessageContent" HelperText="Write something you want to say.."/>
    </DialogContent>

    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Primary" OnClick="Submit">Send</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; }

    public string MessageContent = string.Empty;

    void Submit()
    {
        MudDialog.Close(DialogResult.Ok(MessageContent));
    }

    void Cancel()
    {
        MudDialog.Cancel();
    }

}